{
  "name": "productfolio",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "kill:ports": "lsof -ti:3000,5173 | xargs -r kill -9 2>/dev/null || true",
    "predev": "npm run kill:ports",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run kill:ports && npm run dev --workspace=@productfolio/backend",
    "dev:frontend": "npm run dev --workspace=@productfolio/frontend",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "db:generate": "npm run db:generate --workspace=@productfolio/backend",
    "db:migrate": "npm run db:migrate --workspace=@productfolio/backend",
    "db:push": "npm run db:push --workspace=@productfolio/backend",
    "dev:worker": "npm run dev:worker --workspace=@productfolio/backend",
    "start:worker": "npm run start:worker --workspace=@productfolio/backend",
    "db:seed": "npm run db:seed --workspace=@productfolio/backend"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
